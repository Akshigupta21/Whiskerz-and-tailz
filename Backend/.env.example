# Envir# Database Configuration  
DATABASE_URI=mongodb://localhost:27017/wiskerzandtail
DATABASE_NAME=wiskerzandtail

# JWT Configurationt Configuration
NODE_ENV=development

# Server Configuration
PORT=3001
HOST=localhost

# Database Configuration
DATABASE_URI=mongodb://localhost:27017/petlover
DATABASE_NAME=petlover

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production
JWT_EXPIRES_IN=90d
JWT_COOKIE_EXPIRES_IN=90

# Session Configuration
SESSION_SECRET=your-super-secure-session-secret-change-this-in-production

# Email Configuration (for future email features)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads/

# API Keys (for external services)
VALID_API_KEYS=api-key-1,api-key-2,api-key-3

# Payment Configuration (Razorpay)
RAZORPAY_KEY_ID=rzp_test_your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Payment Configuration (Stripe - deprecated, keeping for backward compatibility)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# External APIs
WEATHER_API_KEY=your-weather-api-key
MAPS_API_KEY=your-google-maps-api-key

# Security Configuration
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=1800000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://127.0.0.1:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Feature Flags
ENABLE_EMAIL_VERIFICATION=true
ENABLE_TWO_FACTOR_AUTH=false
ENABLE_FILE_UPLOADS=true
ENABLE_ANALYTICS=true

# Admin Configuration
ADMIN_EMAIL=admin@wiskerzandtail.com
ADMIN_PASSWORD=admin123456

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
